<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--===================== Packaged Survival Meals ======================-->
    <HediffDef>
        <defName>SPC_HediffFineMealSurvival</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>stuffed from fine survival meal</label>
        <labelNoun>a stuffed belly</labelNoun>
        <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <initialSeverity>1</initialSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3.0</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <hungerRateFactorOffset>-0.25</hungerRateFactorOffset>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>SPC_HediffLavishMealSurvival</defName>
        <hediffClass>HediffWithComps</hediffClass>
        <label>stuffed from lavish survival meal</label>
        <labelNoun>a stuffed belly</labelNoun>
        <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
        <scenarioCanAdd>true</scenarioCanAdd>
        <initialSeverity>1</initialSeverity>
        <isBad>false</isBad>
        <comps>
            <li Class="HediffCompProperties_SeverityPerDay">
                <severityPerDay>-3.0</severityPerDay>
            </li>
        </comps>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>BloodFiltration</capacity>
                        <offset>0.05</offset>
                    </li>
                </capMods>
                <hungerRateFactorOffset>-0.33</hungerRateFactorOffset>
            </li>
        </stages>
    </HediffDef>

</Defs>